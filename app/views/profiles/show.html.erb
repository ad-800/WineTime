<div class="container">
  <h1>Show</h1>

  <h3>User Wine Lists</h3>

  <% @collections.each do |collection| %>
    <div>
      <p><%= link_to collection.title, user_collection_path(id: collection.id, user_id: current_user) %></p>
    </div>
  <% end %>
</div>

<%= link_to "Create a new Wine List", new_collection_path %>

<div>
  <h3>Recommendations</h3>
  <%= render 'shared/recommendations', collections: @collections %>
</div>

<%# raise %>

<div>
  <% if @collections.size == 0 %>
    <%= link_to "Create your first personal Wine List", new_collection_path %>
  <% else %>
    <h3> Your <%= @collections.first.title %>
      Wine list contains
      <%= @collections.first.wine_ids.size %>
      wines. </h3>
  <% end %>

  <% if @collections.first.wine_ids.size == nil %>

    <h3> Nothing to show, add some wines to your list! </h3>

    <%# raise %>

  <% elsif @collections.first.wine_ids.size > 0 %>
    <%= render 'shared/carousel' %>

  <% end %>

</div>
