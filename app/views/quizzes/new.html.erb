<div class="container">
  <%= image_tag "quizz.png", class:'img-quizz mb-3' %>
  <div class="quiz-headers">
    <h1>Take the Questionnaire</h1>
    <h3>Discover your Wine Profile</h3>
    <%= image_tag "31.svg", class: 'scribble-quizz-1' %>
    <%= image_tag "52.svg", class: 'scribble-quizz-2' %>
  </div>
  <div data-controller="form">
    <%= simple_form_for :quizz, url: quizzes_path do |f| %>
    <div class="container form-quizz mt-4 mb-2 p-3 car">
      <div id="carouselExampleDark" class="carousel slide" data-bs-interval="false" data-bs-wrap="false">
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
          <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="3" aria-label="Slide 4"></button>
          <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="4" aria-label="Slide 5"></button>
          <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="5" aria-label="Slide 6"></button>
        </div>
        <div class="carousel-inner content d-flex align-items-center">
          <div class="carousel-item active radio-margin">
            <%= f.input :I_wake_up_in_the_morning_and_drink, as: :radio_buttons, collection: [['0', 'Coffee with sugar'], ['1', 'Coffee and no sugar'], ['2', 'Tea'], ['3', 'Milk'], ['4', 'Nothing']], label_method: :second, value_method: :first, wrapper_html: { data: {form_target: "question"} }, input_html: { data: {action: "change->form#validate"} }  %>
          </div>
          <div class="carousel-item radio-margin">
            <%= f.input :my_favorite_fruits_are, as: :radio_buttons, collection: [['0', 'Citrus only'], ['1', 'Refreshing'], ['2', 'Wild berries'], ['3', 'Bleahhh']], label_method: :second, value_method: :first, wrapper_html: { data: {form_target: "question"} }, input_html: { data: {action: "change->form#validate"} } %>
          </div>
          <div class="carousel-item radio-margin">
            <%= f.input :you_put_salt, as: :radio_buttons, collection: [['0', 'On everything!'], ['1', 'Not at all'], ['2', 'A bit']], label_method: :second, value_method: :first, wrapper_html: { data: {form_target: "question"} }, input_html: { data: {action: "change->form#validate"} } %>
          </div>
          <div class="carousel-item radio-margin">
            <%= f.input :my_friends_call_me, as: :radio_buttons, collection: [['0', 'Adventureous'], ['1', 'Traditional'], ['2', 'Naughty']], label_method: :second, value_method: :first, wrapper_html: { data: {form_target: "question"} }, input_html: { data: {action: "change->form#validate"} } %>
          </div>
          <div class="carousel-item radio-margin">
            <%= f.input :pasta_or_pizza_topping, as: :radio_buttons, collection: [['0', 'Hotttt spicyyyyy'], ['1', 'Truffle or mushrooms'], ['2', 'Vegetables'], ['3', 'Cheesy']], label_method: :second, value_method: :first, wrapper_html: { data: {form_target: "question"} }, input_html: { data: {action: "change->form#validate"} } %>
          </div>
          <div class="carousel-item radio-margin">
            <%= f.input :i_like_to_drink, as: :radio_buttons, collection: [['0', 'Aperitivos'], ['1', 'At special events'], ['2', 'Dinner with friends'], ['3', "All the time, doesn't really matter"]], label_method: :second, value_method: :first, wrapper_html: { data: {form_target: "question"} }, input_html: { data: {action: "change->form#validate"} } %>
          </div>
        </div>
        <br>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
      <%= f.submit 'Submit', class: "btn btn-warning d-none", data: {form_target: "submit"} %>
    </div>
    <% end %>
  </div>
</div>
