<div class="container-lg">
  <% if @search == true || @search == false %>
    <h1 class='mb-5'>Collections Found</h1>
    <div class="row justify-content-center row-cols-1 row-cols-md-2 row-cols-lg-3">
      <% @collections.each do |collection| %>
        <%= link_to user_collection_path(collection.user, collection), class: "no-decoration" do %>
        <% if collection.photo.key %>
          <div class="box-collection mb-3 p-5" style="background-image: linear-gradient(rgba(40, 49, 59, 0.2), rgba(72, 84, 97, 0.2)), url('<%=cl_image_path(collection.photo.key, :crop=>"fill", :alt=>"image of collection") %>')">
        <% else %>
          <div class="box-collection mb-3 p-5" style="background-color: #8D3B72;">
        <% end %>
          <h4 class="title-shadow"><%= collection.title %> by <%= collection.user.username %></h4>
        </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="container mb-3">
      <%= image_tag 'search_again.png', class: 'search-img' %>
      <h3 class='mt-5'>The collection you're searching for does not exist... yet!</h3>
    </div>
  <% end %>
</div>
