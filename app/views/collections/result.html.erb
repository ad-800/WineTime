<div class="container-lg">
  <% if @search == true || @search == false %>
    <h1 class='mb-5'>Collections found:</h1>

    <div class="row justify-content-center row-cols-1 row-cols-md-2 row-cols-lg-3">
      <% @collections.each do |collection| %>
        <div class="box-collection box-result mb-5 p-5" style="background-image: linear-gradient(rgb(40, 49, 59, 0.2), rgba(72, 84, 97, 0.2)), url('<%=cl_image_path(collection.photo.key, :width=>0.2, :crop=>"scale") %>')">
          <h4><%= collection.title %> by <%= collection.user.username %></h4>
          <%= link_to "See collection", user_collection_path(collection.user, collection), class:'link-collections' %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="container mb-3">
      <%= image_tag 'search_again.png', class: 'search-img' %>
      <h3 class='mt-5'>The collection you're searching for does not exist...yet!</h3>
    </div>
  <% end %>
</div>
